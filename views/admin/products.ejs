<%- include('../layouts/start.ejs') %>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <% if (products.length> 0) { %>

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <% products.forEach(product=> { %>
                        <div class="col mb-5">
                            <div class="card h-100">

                                <img class="card-img-top" style=" width: 100%; height: 15vw; object-fit: cover;"
                                    src="<%= product.imageUrl ? product.imageUrl : 'https://www.dionid.com/app/uploads/2020/06/placeholder-1200x0-c-default.png' %>"
                                    alt="..." />

                                <div class="card-body p-4">
                                    <div class="text-center">

                                        <h5 class="fw-bolder">
                                            <%= product.title %>
                                        </h5>
                                        <%= product.price ? "$" + product.price : '' %>
                                    </div>
                                </div>

                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <a class="btn btn-outline-success mt-auto" href="/products/1/edit">
                                            Edit
                                        </a>
                                        <form class='d-inline'>
                                            <button class="btn btn-outline-danger mt-auto" type="submit">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <h1 class="text-secondary">Store is empty :(</h1>
                    <% } %>
        </div>
    </section>

    <%- include('../layouts/end.ejs') %>
