<%- include('../layouts/auth/start.ejs') %>

    <div class="main">

        <div class="mx-5 col-md-6 col-sm-12">
            <div class="login-form">
                <% if(error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <% } %>
                        <form action="/reset" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                            <div class="form-group mb-3">
                                <label><i class="bi-person me-1"></i>Email</label>
                                <input type="email" class="form-control" name='email' placeholder="Email" required>
                            </div>

                            <button type="submit" class="btn btn-success">Reset Password</button>
                            <a href="/login"><button class="btn btn-outline-secondary" type="button">Back to
                                    Login</button></a>
                        </form>
            </div>
        </div>
    </div>

    <%- include('../layouts/auth/end.ejs') %>
